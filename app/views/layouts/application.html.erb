<!DOCTYPE html>
<%= javascript_pack_tag 'application' %>
<html>
  <head>
    <title>Mie</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>
    <header>
      <%= react_component("Navigation", create_navigation_props) %>
    </header>
    <div class="container">
      <%= yield %>
    </div>
    <% flash.each do |k, v| %>
    <%= react_component("Flash", type: k, message: v) %>
  <% end %>
  </body>
</html>
